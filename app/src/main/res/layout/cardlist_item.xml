<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
        android:id="@+id/cardList_ItemRow"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
            android:id="@+id/cardList_cardNameEng" android:text="Row 2 column 2"
            android:textColor="#FFF"
            android:textAppearance="?android:attr/textAppearanceSmall"

        android:layout_width="wrap_content" android:layout_height="wrap_content"
            />
    <TextView
            android:id="@+id/cardList_cardNameJp" android:text="Row 2 column 2"
            android:textColor="#FFF"
            android:textAppearance="?android:attr/textAppearanceSmall"

        android:layout_width="wrap_content" android:layout_height="wrap_content"
            />
    <TextView
            android:id="@+id/cardList_cardType" android:text="Row 2 column 3"
            android:textColor="#FFF"
            android:textAppearance="?android:attr/textAppearanceSmall"

        android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:layout_gravity="right"
        android:gravity="right" />
    <TextView
            android:id="@+id/cardList_cardID" android:text="Row 2 column 1"
            android:textColor="#FFF"
            android:textAppearance="?android:attr/textAppearanceSmall"

        android:layout_width="wrap_content" android:layout_height="wrap_content"/>

</LinearLayout>